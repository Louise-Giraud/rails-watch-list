<h2><%= @list.name %></h2>

<% @list.bookmarks.each do |bookmark| %>
  <h3><%= bookmark.movie.title %></h3>
  <p><%= bookmark.comment %></p>
  <%= link_to "Delete bookmark", bookmark_path(bookmark.id),
  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
  class: "btn btn-danger" %>
<% end  %>

<p><%= link_to "Add a bookmark", new_list_bookmark_path(@list) %></p>

<%= link_to "Delete list", list_path(@list),
  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
  class: "btn btn-danger" %>

<p><%= link_to "Go back", lists_path %></p>
